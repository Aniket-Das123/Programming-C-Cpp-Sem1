// Write a program to check whether the number is positive or negative //

#include<stdio.h>

unsigned int main()
{
	double num;
	printf("Enter a number: ");
	scanf("%If", &num);
	if (num <= 0.0)
	{
		if (num == 0.0)
		    printf("you entered 0.");
	    else
		    printf("You entered a negative number.");
	}
	else
	     printf("You entered a positive number.");
	return 0;
}
